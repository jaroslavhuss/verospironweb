---
import { SITE } from '~/config.mjs';
import Layout from '~/layouts/PageLayout.astro';
import RHZ from '~/assets/images/rhp2.png';
import SS from '~/assets/images/srdceni_selhani2.png';
import BG1 from '~/assets/images/bg_1.png';
import BG2 from '~/assets/images/bg_2.png';
import { Image } from '@astrojs/image/components';
import LatestPosts from '~/components/blog/LatestPosts.astro';
const meta = {
  title: SITE.title,
  description: SITE.description,
  dontUseTitleTemplate: true,
};
---

<Layout {meta}>
  <p class="text-center font-bold shadow-lg py-3">
    Výdej přípravku je vázán na lékařský předpis. Přípravek není hrazen z veřejného zdravotního pojištění. <a
      class="underline">Více v SPC</a>
  </p>
  <section class="w-full relative slanted py-28 overflow-hidden bg-transparent z-10">
    <div class="mx-auto max-w-3xl grid xl:grid-cols-2 lg:grid-cols-2 md:grid-cols-1 sm:grid-cols-1 gap-3 relative">
      <a href="/rezistentni-hypertenze" class="col-span-1 text-center rounded-sm mx-auto z-30 group relative">
        <Image
          src={BG2}
          width={500}
          height={500}
          alt="rezistentní hypertenze"
          class="max-w-max max-h-max absolute opacity-5 -top-10 group-hover:opacity-30 transition-all group-hover:scale-105 z-0 duration-1000 -left-20 group-hover:-left-80 group-hover:animate-floating hidden xl:block lg:block"
        />
        <Image
          src={RHZ}
          width={300}
          height={300}
          alt="Srdeční selhání"
          class="max-w-max max-h-max border shadow duration-700 transition-all cursor-pointer hover:scale-105 group-hover:-translate-y-5 z-40"
          style="border-radius:100%"
        />
        <div
          class="text-sm absolute bottom-0 left-0 text-center w-full bg-gradient-to-br from-white via-white to-slate-100 py-2 shadow border font-bold"
        >
          <p>REZISTENTNÍ HYPERTENZE</p>
        </div>
      </a>

      <a href="/srdecni-selhani" class="col-span-1 text-center rounded-sm mx-auto z-30 group relative">
        <Image
          src={BG1}
          width={500}
          height={750}
          alt="Srdeční selhání"
          class="max-w-max max-h-max absolute -top-20 -right-20 opacity-5 z-0 group-hover:opacity-30 transition-all duration-1000 group-hover:scale-105 group-hover:-right-80 group-hover:animate-floating hidden xl:block lg:block"
        />
        <Image
          src={SS}
          width={300}
          height={300}
          alt="Srdeční selhání"
          class="max-w-max max-h-max border shadow duration-700 transition-all cursor-pointer hover:scale-105 hover:-translate-y-5 z-40"
          style="border-radius:100%"
        />
        <div
          class="text-lg absolute bottom-0 left-0 text-center w-full bg-gradient-to-br from-white via-white to-slate-100 py-2 shadow border font-bold"
        >
          <p class="text-sm">SRDEČNÍ SELHÁNÍ</p>
        </div>
      </a>
    </div>
  </section>
  <section
    class="bg-gradient-to-br from-green-800 via-green-400 to-green-800 relative hover:from-green-400 hover:via-green-800 hover:to-green-400 transition-all duration-700 ease-in-out overflow-hidden z-0"
  >
    <div class="mx-auto max-w-7xl px-10">
      <LatestPosts title="Aktuality" postIds={['']} />
    </div>
  </section>
</Layout>
